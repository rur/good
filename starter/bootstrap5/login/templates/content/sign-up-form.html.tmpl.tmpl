<main id="content" class="form-signin">
  <form treetop action="/[# .Name #]/register/create" method="POST">
    <h1 class="h3 mb-3 fw-normal">Create an account</h1>

    <h6>User Name</h6>
    {{ template "register-name" .RegisterName }}

    <h6>Email</h6>
    {{ template "register-email" .RegisterEmail }}

    <h6>Password</h6>
    {{ template "register-password" .RegisterPassword }}

    {{ template "register-alert" .RegisterAlert }}

    <button class="w-100 btn btn-lg btn-primary" type="submit">Register user</button>

    <hr class="my-4">

    <a href="/[# .Name #]" class="w-100 btn btn btn-lg btn-outline-secondary">Sign in</a>

    <p class="mt-5 mb-3 text-muted">Generated by the
      <a href="https://github.com/rur/good" target="_blank">Good Scaffold</a>
    </p>
    <p class="mt-3 mb-3 text-muted">Uses the
      <a href="https://getbootstrap.com/" target="_blank">Boostrap v5</a> front-end toolkit
    </p>
  </form>
</main>
